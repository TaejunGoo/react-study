{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"settings": {
		"import/resolver": "node"
	},
	"parserOptions": {
		"project": "./tsconfig.json",
		"createDefaultProgram": true
	},
	"env": {
		// 전역객체를 eslint가 인식하는 구간
		"browser": true, // document나 window 인식되게 함
		"node": true,
		"es6": true,
		"worker": true,
		"jest": true
	},
	// eslint 미적용될 폴더나 파일 명시
	"ignorePatterns": [".next/", "node_modules/", ".pnp.cjs", ".pnp.loader.mjs", "public", ".yarn"],
	"plugins": ["@typescript-eslint", "prettier"],
	"extends": [
		"next/core-web-vitals",
		"airbnb",
		"airbnb-typescript",
		"plugin:@typescript-eslint/recommended", // ts 권장
		"prettier", // eslint-config-prettier prettier와 중복된 eslint 규칙 제거
		"plugin:prettier/recommended", // eslint의 포매팅을 prettier로 사용.
		"plugin:testing-library/react",
		"plugin:jest-dom/recommended"
	],
	"rules": {
		// react 17부터 import 하지 않아도 자동적용 됨
		"react/react-in-jsx-scope": "off",
		// 경고표시, 파일 확장자를 .ts나 .tsx 모두 허용함
		"react/jsx-filename-extension": ["warn", { "extensions": [".ts", ".tsx"] }],
		// export default 강제하지 않음
		"import/prefer-default-export": "off",
		// 함수형 컴포넌트 사용으로 defaultProps 사용하지 않음
		"react/require-default-props": "off",
		"import/extensions": ["off"],
		// prettier 에러를 eslint 레벨에서 활성화
		"prettier/prettier": ["error", { "endOfLine": "auto" }, { "usePrettierrc": true }],
		// component 함수 작성법 제한
		"react/function-component-definition": [
			"error",
			{
				"namedComponents": ["arrow-function", "function-declaration"]
			}
		],
		// typescript 사용으로 prop-types 검사는 사용하지 않음
		"react/prop-types": "off"
	},
	"overrides": [
		{
			// style 관련 태그 주입으로 dangerouslySetInnerHTML 사용
			"files": ["./src/**/RootStyleRegistry.tsx"],
			"rules": {
				"react/no-danger": "off"
			}
		}
	]
}
